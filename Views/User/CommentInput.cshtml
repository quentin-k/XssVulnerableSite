@model XssVulnerableSite.Models.CommentInput;
@using System.Text.Encodings.Web;
@{
    ViewData["Title"] = "Comment Inputs";
}

<div class="text-center">
    @if (Model.FavoriteFood == null)
    {
        <h1 class="display-4">What is your favorite food?</h1>
    }
    else
    {
        <!-- The user's favorite food of @Html.Raw(Model.FavoriteFood) is not a good pick!-->
        <h1>I think that @Html.Encode(Model.FavoriteFood) is pretty good too!</h1>
    }
    <div class="row">
                <div class="col-md-12">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="FavoriteFood" class="form-control" placeholder="Enter your favorite food here" pattern="[^\x3c\x3e]+"/>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
    <hr />
    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Back to home</a>

</div>